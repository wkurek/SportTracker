<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wkurek.sporttracker.PersonalFragment"
    android:background="#ebeaea"
    android:orientation="vertical">

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="8dp"
       app:cardCornerRadius="2dp"
       app:cardBackgroundColor="@color/colorTextLight">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:background="@color/colorAccent">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textColor="@color/colorTextLight"
                   android:drawableStart="@drawable/ic_training"
                   android:textSize="16sp"
                   android:drawablePadding="8dp"
                   android:text="@string/personal_hall_of_fame"/>

           </LinearLayout>

           <TextView
               android:id="@+id/personal_best_distance"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:drawableStart="@drawable/ic_distance"
               android:drawablePadding="8dp"/>

           <TextView
               android:id="@+id/personal_best_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:drawableStart="@drawable/ic_timer"
               android:drawablePadding="8dp"/>

       </LinearLayout>

   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/colorTextLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextLight"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:text="@string/personal_monthly_summary_header"/>

            </LinearLayout>

            <TextView
                android:id="@+id/personal_monthly_trainings_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_training"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/personal_monthly_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_distance"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/personal_monthly_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="8dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/colorTextLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextLight"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="8dp"
                    android:text="@string/personal_total_summary_header"/>

            </LinearLayout>

            <TextView
                android:id="@+id/personal_total_trainings_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_training"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/personal_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_distance"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/personal_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/ic_timer"
                android:drawablePadding="8dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
